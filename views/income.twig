{% extends 'layout.twig' %}
{% block title %}
    <title>Мои доходы | Система учета финансов</title>
{% endblock %}
{% block content %}
    <div class="row clearfix">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-indigo">
                    <h2>Добавление дохода</h2>
                </div>
                <div class="body">
                    <form id="form_validation_income">
                        <div class="form-group form-float">
                            <select id="income_acc" title="Выберите счет" type="select" name="accSel" required="" class="accountSelector">
                                <option value="" disabled="" selected="">Выберите счет</option>
                            </select>
                        </div>
                        <div class="form-group form-float">
                            <select id="income_category" title="Выберите операцию" type="select" name="category" required="">
                                <option value="" disabled="" selected="">Выберите категорию</option>
                                <option>Зарплата</option>
                                <option>Премия</option>
                                <option>Пополнение наличными</option>
                                <option>Перевод средств</option>
                                <option>Подарок</option>
                                <option>Другое</option>
                            </select>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="income_date" type="text" name="date" placeholder="Дата" required="" class="date form-control"/>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="income_sum" type="number" name="number" min="0.001" required="" class="form-control"/>
                                <label class="form-label" for="income_sum">Сумма</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="income_comment" type="text" name="comment" class="form-control"/>
                                <label class="form-label" for="income_comment">Комментарий</label>
                            </div>
                        </div>
                        <button id="new_income" type="submit" class="btn bg-indigo waves-effect subBtn">Добавить доход</button>
                        <br>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-indigo">
                    <h2>Мои доходы</h2>
                </div>
                <div class="tab-content">
                    <div class="body">
                        <div class="table-responsive">
                            <table id="table_myincome" cellspacing="0" width="100%" class="display">
                                <thead>
                                <tr>
                                    <th>Счет</th>
                                    <th>Категория</th>
                                    <th>Дата</th>
                                    <th>Сумма</th>
                                    <th>Комментарий</th>
                                    <th>Удалить доход</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th> </th>
                                    <th> </th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th> </th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}