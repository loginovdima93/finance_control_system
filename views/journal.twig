{% extends 'layout.twig' %}
{% block title %}
    <title>Мои операции | Система учета финансов</title>
{% endblock %}
{% block content %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="tab-content">
                    <div class="header bg-indigo">
                        <h2>Мои операции</h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table id="journal_table" cellspacing="0" width="100%" class="display js-exportable">
                                <thead>
                                <tr>
                                    <th>Счет</th>
                                    <th>Категория</th>
                                    <th>Дата</th>
                                    <th>Сумма</th>
                                    <th>Комментарий</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div id="totalMoney" class="body"></div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div id="totalSum" class="body"></div>
        </div>
    </div>
{% endblock %}